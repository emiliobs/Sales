<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sales.Views.AddProductPage"
             xmlns:i18n="clr-namespace:Sales.Helpers"
              BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="{i18n:Translate AddProducts}">
    <ContentPage.Content>
        <ScrollView BindingContext="{Binding AddProduct}">               
        <StackLayout  Padding="10">
            <Label 
                Text="{i18n:Translate Description}">
            </Label>
            <Entry
                Placeholder="{i18n:Translate DescriptionPlaceHolder}">                
            </Entry>
            <Label 
                Text="{i18n:Translate Price}">
            </Label>
            <Entry
                Placeholder="{i18n:Translate PricePlaceHolder}"
                Keyboard="Numeric">
            </Entry>
            <Label 
                Text="{i18n:Translate Remarks}">
            </Label>
            <Editor VerticalOptions="FillAndExpand"></Editor>
            <ActivityIndicator></ActivityIndicator>
            <Button
                BackgroundColor="Magenta"
                CornerRadius="23"
                Text="{i18n:Translate Save}"
                HeightRequest="46">                
            </Button>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>